    function nmean = nmean(data)
    % calculate mean ignoring NaN values
        nan = isnan(data);
        data(nan) = 0;
        count = sum(~nan);
        count(count==0) = NaN;      % prevent divide by 0
        nmean = sum(data)./count;
    end

